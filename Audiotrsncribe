# Install Python dependencies from requirements.txt
try {
    Write-Host "`n--- Installing Python Dependencies ---`n"
    if (Test-Path ".\requirements.txt") {
        pip install -r requirements.txt -ErrorAction Stop
        Write-Host "Python dependencies installed successfully."
    } else {
        Write-Warning "requirements.txt not found in the current directory."
    }
} catch {
    Write-Error "Failed to install Python dependencies: $_"
}

# Change directory to 'lib' and install Node.js dependencies
try {
    Write-Host "`n--- Installing Node.js Dependencies from ./lib/package.json ---`n"
    if (Test-Path ".\lib\package.json") {
        Push-Location .\lib
        npm install --silent
        Pop-Location
        Write-Host "Node.js dependencies installed successfully in lib folder."
    } else {
        Write-Warning "package.json not found in the 'lib' folder."
    }
} catch {
    Write-Error "Failed to install Node.js dependencies: $_"
}
